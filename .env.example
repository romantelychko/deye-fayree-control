# ============================================================
# Конфігурація системи керування зарядкою Feyree EV
# ============================================================

# ============================================================
# Налаштування Deye інвертора
# ============================================================
# IP адреса Solarman/SOLARMAN logger (Data Logger Stick)
LOGGER_IP=172.16.32.50

# Серійний номер logger (зазвичай 10 цифр)
LOGGER_SN=0000000000

# Modbus Slave ID (зазвичай 1)
MB_SLAVE_ID=1

# Порт для підключення (за замовчуванням 8899)
LOGGER_PORT=8899

# ============================================================
# Налаштування Feyree зарядки (Tuya)
# ============================================================
# IP адреса зарядки Feyree в локальній мережі
FEYREE_IP=172.16.32.48

# Device ID з Tuya IoT Platform (отримати через tinytuya wizard)
FEYREE_DEVICE_ID=000000000000000000

# Local Key з Tuya IoT Platform (отримати через tinytuya wizard)
FEYREE_LOCAL_KEY=00000000000000

# Версія протоколу Tuya (зазвичай 3.3, можливо 3.1 або 3.4)
FEYREE_VERSION=3.3

# ============================================================
# DPS коди Feyree (Data Point System)
# ============================================================
# DPS код для головного перемикача (ВВІМК/ВИМК)
FEYREE_SWITCH_DPS=18

# DPS код для режиму роботи
FEYREE_MODE_DPS=14

# Значення режиму "заряджати зараз"
FEYREE_CHARGE_NOW_MODE=charge_now

# ============================================================
# Логіка керування зарядкою
# ============================================================
# Мінімальний рівень заряду батареї для увімкнення зарядки (%)
SOC_THRESHOLD=90

# Максимальний дозволений імпорт з мережі під час зарядки (W)
# Якщо імпорт більший, зарядка буде вимкнена
GRID_IMPORT_THRESHOLD=250

# Інтервал перевірки стану системи (секунди)
CHECK_INTERVAL_SEC=120

# Сила струму зарядки (Ампери)
CHARGING_CURRENT_A=16

# ============================================================
# Налаштування підключення
# ============================================================
# Максимальна кількість спроб підключення
MAX_ATTEMPTS=5

# Затримка між спробами підключення (секунди)
RETRY_DELAY_SEC=1.0

# Таймаут підключення (секунди)
CONNECTION_TIMEOUT_SEC=15
