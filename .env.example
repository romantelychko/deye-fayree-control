# ============================================================
# Конфігурація Deye Inverter + Feyree EV Charger Control
# ============================================================

# ------------------------------
# Deye інвертор (Modbus)
# ------------------------------
# IP-адреса логера Deye
LOGGER_IP=your_logger_ip_here

# Серійний номер логера
LOGGER_SN=your_logger_serial_number_here

# ID Modbus-пристрою
MB_SLAVE_ID=1

# TCP порт логера
LOGGER_PORT=8899

# ------------------------------
# Feyree EV зарядка (Tuya)
# ------------------------------
# IP-адреса зарядки Feyree
FEYREE_IP=your_feyree_device_ip_here

# Device ID з Tuya IoT Platform (отримати через tinytuya wizard або Tuya IoT Console)
FEYREE_DEVICE_ID=your_feyree_device_id_here

# Local Key з Tuya IoT Platform (отримати через tinytuya wizard або Tuya IoT Console)
FEYREE_LOCAL_KEY=your_feyree_device_local_key_here

# Версія протоколу Tuya (зазвичай 3.3 або 3.4)
FEYREE_VERSION=3.3

# Feyree DPS коди (Data Point System - номери параметрів Tuya)
# Зазвичай не потрібно міняти, якщо wizard знайшов правильні
FEYREE_SWITCH_DPS=18
FEYREE_MODE_DPS=14
FEYREE_CHARGE_NOW_MODE=charge_now

# ------------------------------
# Логіка керування зарядкою
# ------------------------------
# Мінімальний рівень заряду батареї (%) для увімкнення зарядки EV
SOC_THRESHOLD=90

# Максимальна потужність імпорту з мережі (W) для увімкнення зарядки EV
GRID_IMPORT_THRESHOLD=250

# Інтервал перевірки стану (секунди)
CHECK_INTERVAL_SEC=120

# Сила струму зарядки (Ампери) - для Feyree
CHARGING_CURRENT_A=16

# ------------------------------
# Налаштування повторних спроб
# ------------------------------
# Кількість повторних спроб при помилках зв'язку
MAX_ATTEMPTS=5

# Затримка між повторними спробами (секунди)
RETRY_DELAY_SEC=1.0

# Timeout підключення до пристроїв (секунди)
CONNECTION_TIMEOUT_SEC=30
